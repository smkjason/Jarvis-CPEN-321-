<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/RLtime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:text="#"
            android:fontFamily="@font/aclonica"
            android:textSize="25dp">
        </TextView>

        <TextView
            android:id="@+id/tvName_Pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tvRank"
            android:text="Name"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLength_Pending"
            android:layout_below="@+id/tvName_Pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvName_Pending"
            android:text="Length"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/tvLength_Pending"
            android:layout_below="@id/tvName_Pending"
            android:text="Admin"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"
            android:textStyle="bold" />

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/abc_action_button_min_height_material"
            android:layout_centerHorizontal="true"
            android:id="@+id/view"
            android:background="@android:color/white"
            android:layout_alignParentTop="true"
            />

        <Button
            android:id="@+id/Accept_pending_bttn"
            android:layout_width="94dp"
            android:layout_height="44dp"
            android:layout_marginRight="19dp"
            android:layout_toLeftOf="@id/Decline_bttn_pending"
            android:layout_toRightOf="@+id/view"
            android:background="@android:color/holo_green_light"
            android:text="Accept"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/abc_action_button_min_height_material"
            android:layout_centerHorizontal="true"
            android:id="@+id/view2"
            android:background="@android:color/white"
            android:layout_alignParentTop="true"
            />

        <Button
            android:id="@+id/Decline_bttn_pending"
            android:layout_width="94dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:text="Decline"
            android:background="@android:color/holo_red_dark">
        </Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>