<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tvstartPreferredDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:text="November, 26th, 2019"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvendPreferredDate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingBottom="5dp">
    </TextView>
    <TextView
        android:id="@+id/TO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO"
        app:layout_constraintLeft_toRightOf="@id/tvstartPreferredDate"
        app:layout_constraintRight_toLeftOf="@id/tvendPreferredDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        >
    </TextView>
    <TextView
        android:id="@+id/tvendPreferredDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:text="November, 27th, 2019"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvstartPreferredDate"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="5dp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>