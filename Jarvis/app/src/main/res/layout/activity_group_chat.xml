<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupChatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/GroupChat_ToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GroupChat">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/GroupChat_AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollview_groupchat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/GroupChat_AppBar"
        android:layout_above="@id/GroupChat_LinearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/GroupChat_TextDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="50dp"
                >
            </TextView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/GroupChat_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/GroupChat_MessageToSend"
            android:layout_width="362dp"
            android:layout_height="match_parent"
            android:hint="Write your message here..."
            android:padding="17dp"></EditText>

        <ImageButton
            android:id="@+id/GroupChat_sendButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/send_button">

        </ImageButton>
    </LinearLayout>

</RelativeLayout>